<div class="body">
	<div class="container">
		<p id="notice"><%= notice %></p>
		<div class="row">
			<h1> Editing Book</h1>
			<div class="col-xs-3"></div>
			<div class="col-xs-9">
				<%= form_for(@book) do |f| %>
				<div class="field row">
					<label for="book_title">Title</label>
					<%= f.text_field :title, class: "col-xs-12" %>
				</div>
				<div class="field row">
					<label for="book_opinon">Opinion</label>
					<%= f.text_area :book_opinion, class: "col-xs-12" %>
				</div>
				<div class="actions row">
					<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
				</div>
				<% end %>
				<%= link_to 'Show', book_path %>
				|
				<%= link_to 'Back', books_path %>
			</div>
		</div>
	</div>
</div>
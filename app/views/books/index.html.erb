<div class="body">
	<div class="container">
		<p id="notice"><%= notice %></p>
		<div class="row">
			<div class="col-xs-3">
				<h2> User info</h2>
				<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<td><%= current_user.name %></td>
						</tr>
						<tr>
							<th>introduction</th>
							<td><%= current_user.intro %></td>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<% if @user == current_user %>
					<%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
					<% end %>
				</div>
				<h2> New book</h2>
				<%= form_for(@book) do |f| %>
					<div class="field row">
						<label for="book_title">Title</label>
						<%= f.text_field :title, class: "col-xs-12" %>
					</div>
					<div class="field row">
						<label for="book_opinon">Opinion</label>
						<%= f.text_area :book_opinion, class: "col-xs-12" %>
					</div>
					<div class="actions row">
						<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
					</div>
				<% end %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
								<td><%= link_to book.title, book_path(book.id) %></td>
								<td><%= book.book_opinion %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

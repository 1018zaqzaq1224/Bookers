<div class="body">
	<div class="container">
		<h2> User info</h2>
		<%= form_for(@user) do |f| %>

			<div class="field">
				<label for="user_name">Name</label>
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<label for="profile_image">Image</label>
				<%= f.attachment_field :profile_image %>
			</div>
			<div class="field">
				<label for="user_intro">Introduction</label>
				<%= f.text_area :intro %>
			</div>
			<div class="actions">
				<%= f.submit 'Update user' %>
			</div>

		<% end %>
	</div>
</div>

